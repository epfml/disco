{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],

    "strict": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "node16",
    "moduleResolution": "node16",
    "downlevelIteration": true,

    "declaration": true,

    "outDir": "dist",

    "typeRoots": ["node_modules/@types"],

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"]
  }
