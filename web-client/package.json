{
  "name": "@epfml/disco-web-client",
  "private": true,
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test": "vue-cli-service test:unit tests",
    "build17": "export NODE_OPTIONS=--openssl-legacy-provider && vue-cli-service build",
    "lint17": "export NODE_OPTIONS=--openssl-legacy-provider  && vue-cli-service lint",
    "prod": "vue-cli-service serve --mode production",
    "serve17": "export NODE_OPTIONS=--openssl-legacy-provider && vue-cli-service serve"
  },
  "dependencies": {
    "@epfml/discojs": "file:../discojs/discojs-web",
    "@meforma/vue-toaster": "1",
    "apexcharts": "3",
    "autoprefixer": "10",
    "aws-sdk": "2",
    "axios": "0",
    "core-js": "3",
    "crypto-browserify": "3",
    "cypress": "10",
    "immutable": "4",
    "jshashes": "1",
    "mock-aws-s3": "4",
    "msgpack-lite": "0",
    "nock": "13",
    "path-browserify": "1",
    "pinia": "2",
    "postcss": "8",
    "rand-seed": "1",
    "seedrandom": "3",
    "simple-peer": "9",
    "stream-browserify": "3",
    "tailwindcss": "3",
    "tippy.js": "6",
    "ts-node-register": "1",
    "vee-validate": "4",
    "vue": "3",
    "vue-i18n": "9",
    "vue-router": "4",
    "vue3-apexcharts": "1",
    "yup": "0"
  },
  "devDependencies": {
    "@types/msgpack-lite": "0.1",
    "@typescript-eslint/eslint-plugin": "5",
    "@typescript-eslint/parser": "5",
    "@vue/cli-plugin-babel": "5",
    "@vue/cli-plugin-eslint": "5",
    "@vue/cli-plugin-router": "5",
    "@vue/cli-plugin-typescript": "5",
    "@vue/cli-plugin-unit-mocha": "5",
    "@vue/cli-service": "5",
    "@vue/compiler-sfc": "3",
    "@vue/eslint-config-prettier": "6",
    "@vue/eslint-config-standard": "6",
    "@vue/eslint-config-typescript": "7",
    "@vue/test-utils": "2",
    "babel-eslint": "10",
    "eslint": "7",
    "eslint-config-standard": "16",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "11",
    "eslint-plugin-prettier": "3",
    "eslint-plugin-promise": "5",
    "eslint-plugin-vue": "7",
    "typescript": "4",
    "vue-cli-plugin-tailwind": "3",
    "vue-loader-v16": "npm:vue-loader@16"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/prettier",
      "@vue/typescript",
      "@vue/standard",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "ecmaVersion": 2020
    },
    "rules": {
      "no-unused-vars": "off",
      "multi-word-component-names": "off",
      "vue/multi-word-component-names": "off",
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true,
          "trailingComma": "es5"
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
