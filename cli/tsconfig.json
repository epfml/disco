{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES5"],

    "strict": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "node16",
    "moduleResolution": "node16",
    "downlevelIteration": true, // needed by <ES6

    "declaration": true,

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"]
}
