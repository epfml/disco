{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES5"],

    "strict": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "downlevelIteration": true, // needed by <ES6

    "declaration": true,

    "baseUrl": "src",
    "outDir":  "dist",
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts"]
}
