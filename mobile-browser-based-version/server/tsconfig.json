{
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "CommonJS",
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
}